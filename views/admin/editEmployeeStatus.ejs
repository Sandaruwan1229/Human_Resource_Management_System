<%-include("_header", {user}) %>


<div>
    <div class="container-fluid" style="min-height: 91vh;" >
        <div class="row">
           
            <div class="col-12">
                <div class="row" style="margin-top: 120px;">
                     
                    <% if(error) {%>
                        <div class="col-8 m-auto">
                            <div class="alert alert-danger" role="alert">
                               <%=error%>
                              </div>
                        </div>
                    <%} %>
                  
<!-- ####################################################################################################### -->
                    <div class="col-8 m-auto p-5  bg-light">
                             <div class="col-sm-8"><h2>Employee status: <%=EmployeeStatus.e_status_name%> </h2></div>
                        <form action="/admin/editEmployeeStatus/<%=EmployeeStatus.e_status_name%>" method="post">
                            <div class="form-group">
                                <label for="">duration</label>
                                <input type="text" class="form-control" name="duration" value="<%=EmployeeStatus.duration%>">
                            </div>

                            <div class="form-group">
                                <label for="">description</label>
                                <input type="text" class="form-control" name="description" value="<%=EmployeeStatus.description%>">
                            </div>
                            
                           
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>

<!-- ################################################################################################# -->
                    </div>




                </div>
            </div>
     </div>
  </div>
</div>

<%-include("_footer", {user}) %>