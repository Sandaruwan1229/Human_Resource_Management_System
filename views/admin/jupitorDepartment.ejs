<%-include("_header", {user}) %>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="../../assets/css/viewBrnaches.css">

<div>
    <div class="container-fluid" style="min-height: 91vh;" >
        <div class="row" >
           
            <div class="col-12">
                <div class="row" style="margin-top: 120px;">
                     
                    <% if(error) {%>
                        <div class="col-9 m-auto">
                            <div class="alert alert-danger" role="alert">
                               <%=error%>
                              </div>
                        </div>
                    <%} %>
                    <% if(success) {%>
                        <div class="col-9 m-auto">
                            <div class="alert alert-success" role="alert">
                               <%=success%>
                              </div>
                        </div>
                    <%} %>
<!-- ############################################################################################################################ -->
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">			
            <div class="table-title">
                <div class="row">
                   
                    <div class="col-sm-4 m-auto">
                        <h2 class="text-center">Jupitor Departments</h2>
                    </div>






                    <div class="col-12">
                        <p>
                            <button class="btn btn btn-primary  btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample"><i class="fa fa-plus"></i> Add Department</button>
                        </p>
                          <div class="collapse" id="collapseExample">
                            <div class="card card-body ">
                                <form method="POST" action="/admin/addDepartment">
                                    <div class="row">
                                      <div class="col-5">
                                        <input type="text" class="form-control" placeholder="Department name" name="dept_name">
                                      </div>
                                     
                                     </div>

                                    <button  type="submit" class="btn btn-primary btn-sm mt-2">submit</button>
                                  </form>
                            </div>
                          </div>

                    </div>





                   
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Department<i class="fa fa-sort"></i></th>
                        <th>Employee Count</th>
                       
                        <th>Action</th>
                      
                    </tr>
                </thead>
                <tbody>
                   <% if(Departments && Departments[0]){ 
                       Departments.forEach(function( Department, index){ %>
                    <tr>
                        <td><%=index+1%></td>
                        <td><%=Department.dept_name%></td>
                        <td><%=Department.employee_count%></td>
                       
                        
                       
                        <td>
                           
                            <a href="#" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>

                        </td>
                    </tr>
                    <%})}else{ %>
                        <tr>
                            <td>1</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                         
                         
                        </tr>
                    <% }%>
                         
                </tbody>
            </table>
           
        </div>
    </div>        
</div>

<!-- ##################################################################################################################################### -->
                </div>
            </div>
     </div>
  </div>
</div>
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
        // Animate select box length
        var searchInput = $(".search-box input");
        var inputGroup = $(".search-box .input-group");
        var boxWidth = inputGroup.width();
        searchInput.focus(function(){
            inputGroup.animate({
                width: "300"
            });
        }).blur(function(){
            inputGroup.animate({
                width: boxWidth
            });
        });
    });
    </script>
