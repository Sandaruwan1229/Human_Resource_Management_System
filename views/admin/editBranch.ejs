<%-include("_header", {user}) %>


<div>
    <div class="container-fluid" style="min-height: 91vh;" >
        <div class="row">
           
            <div class="col-12">
                <div class="row" style="margin-top: 120px;">
                     
                    <% if(error) {%>
                        <div class="col-8 m-auto">
                            <div class="alert alert-danger" role="alert">
                               <%=error%>
                              </div>
                        </div>
                    <%} %>
                  
<!-- ####################################################################################################### -->
                    <div class="col-8 m-auto p-5  bg-light">
                             <div class="col-sm-8"><h2>Branch : <%=Branch.branch_name%></h2></div>
                        <form action="/admin/editBranch/<%=Branch.branch_name%>" method="post">
                            <div class="form-group">
                                <label for="">Address</label>
                                <input type="text" class="form-control" name="address" value="<%=Branch?Branch.address:''%>">
                            </div>

                            <div class="form-group">
                                <label for="">City</label>
                                <input type="text" class="form-control" name="city" value="<%=Branch?Branch.city:''%>">
                            </div>
                            
                            <div class="form-group">
                                <label for="">Postal Code</label>
                                <input type="number" class="form-control" name="postal_code" value="<%=Branch?Branch.postal_code:''%>">
                            </div>

                            <div class="form-group">
                                <label for="">Country</label>
                                <input type="text" class="form-control" name="country" value="<%=Branch?Branch.country:''%>">
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>

<!-- ################################################################################################# -->
                    </div>




                </div>
            </div>
     </div>
  </div>
</div>

<%-include("_footer", {user}) %>