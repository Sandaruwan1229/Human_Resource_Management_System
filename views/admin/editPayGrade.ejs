<%-include("_header", {user}) %>


<div>
    <div class="container-fluid">
        <div class="row">
           
            <div class="col-12">
                <div class="row" style="margin-top: 159px;">
                     
                    <% if(error) {%>
                        <div class="col-8 m-auto">
                            <div class="alert alert-danger" role="alert">
                               <%=error%>
                              </div>
                        </div>
                    <%} %>
                  
<!-- ####################################################################################################### -->
                    <div class="col-8 m-auto p-5  bg-light">
                             <div class="col-sm-8"><h2>Pay Grade : <%=payGrade.paygrade_level%> </h2></div>
                        <form action="/admin/editPaygrade/<%=payGrade.paygrade_level%>" method="post">
                            <div class="form-group">
                                <label for="">description</label>
                                <input type="text" class="form-control" name="description" value="<%=payGrade.description%>">
                            </div>

                            <div class="form-group">
                                <label for="">Requirement</label>
                                <input type="text" class="form-control" name="requirement" value="<%=payGrade.requirement%>">
                            </div>
                            
                           
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>

<!-- ################################################################################################# -->
                    </div>




                </div>
            </div>
     </div>
  </div>
</div>

<%-include("_footer", {user}) %>