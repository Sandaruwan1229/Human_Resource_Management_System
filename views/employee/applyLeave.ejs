<%- include('_header',{title:"applyLeave"}) %>
<%- include('_sidebar',{title:"applyLeave"}) %>
<% error= false; %>




<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2  m-auto"></div>
            <div class="col-8 m-auto">
                <div class="row" style="margin-top: 50px; margin-bottom: 50px;">
                    <% if(error) {%>
                    <div class="col-9 m-auto"></div>
                    <div class="alert alert-danger" role="alert">
                        <%=error%>
                    </div>
                </div>
                <%} %>

                <div class="col-6 m-auto" style="padding: 30px; margin: 50px;background-color: #afd469;">
                    <h1 class="text-center" style="color:#007bff;">Apply Leave</h1>
                    <form action="/employee/requestLeave" method="POST">
                        <div class="form-group mb-3"><input class="form-control" type="text" name="ID" placeholder="ID"
                                value="<%= userId %>"></div>

                        <div class="form-group mb-3">
                            Leave Type
                            <select class="form-control" id="leaveType" name="leaveType">

                                <option value=""></option>
                                <option value="anual">Annual</option>
                                <option value="casual">Casual</option>
                                <option value="maternity">Maternity</option>
                                <option value="no_pay">No Pay</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            Leave Start Date : <br>
                            <input type="date" name="startdate" id="startDate">
                        </div>

                        <div class="form-group mb-3">
                            Leave Duration in Days <br>
                            <input type="number" name="duration" id="duration">
                        </div>



                        <div class="form-group mb-3"><input class="form-control" type="text" name="reason"
                                placeholder="reason" value=""></div>


                        <div class="form-group mb-3"><button class="btn btn-primary" type="submit">Submit
                                Request</button></div>
                    </form>
                </div>
            </div>
            <div class="col-2  m-auto"></div>
        </div>
    </div>
</div>
</div>


</body>









<%- include('_footer') %>